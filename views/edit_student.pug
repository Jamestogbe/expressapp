extends template

block content
  h1= `Edit ${student.sname} ${student.fname}`
  form(method='POST', action='/students/edit/'+student._id)
    #form-group
      label Firstname:
      input.form-control(name='fname', type='text', value=student.fname)
    #form-group
      label Surname:
      input.form-control(name='sname', type='text', value=student.sname)
    #form-group
      label Age:
      input.form-control(name='age', type='number', value=student.age)
    #form-group
      label Sex:
      input.form-control(name='sex', type='text', value=student.sex)
    #form-group
      label Class:
      input.form-control(name='class', type='text', value=student.class)
    #form-group
      label Nationality:
      input.form-control(name='nationality', type='text', value=student.nationality)
    #form-group
      label Religion:
      input.form-control(name='religion', type='text', value=student.religion)
    hr
    input.btn.btn-primary(type='submit', value='Update')
